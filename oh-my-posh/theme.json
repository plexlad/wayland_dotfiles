{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#bdae93",
                    "properties": {
                        "style": "folder"
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#cc241d",
                    "template": ">"
                }
            ]
        }
    ]
}
